/** Extensions
 * akamud.vscode-theme-onedark
 * bradlc.vscode-tailwindcss
 * charliermarsh.ruff
 * christian-kohler.path-intellisense
 * codeium.codeium
 * dbaeumer.vscode-eslint
 * dsznajder.es7-react-js-snippets
 * esbenp.prettier-vscode
 * formulahendry.code-runner
 * golang.go
 * mhutchie.git-graph
 * mikestead.dotenv
 * ms-python.debugpy
 * ms-python.python
 * ms-python.vscode-pylance
 * pixelbyte-studios.pixelbyte-love2d
 * pkief.material-icon-theme
 * ritwickdey.liveserver
 * stivo.tailwind-fold
 * streetsidesoftware.code-spell-checker
 * styled-components.vscode-styled-components
 * timonwong.shellcheck
 * usernamehw.errorlens
 * vscode-icons-team.vscode-icons
 * vscodeshift.mui-snippets
 * yinfei.luahelper
 * yoavbls.pretty-ts-errors
 * yzhang.markdown-all-in-one
 */
{
    /* Editor */
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Atom One Dark",
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontSize": 13,
    "editor.lineNumbers": "on",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": false,
    "editor.hover.enabled": true,
    "editor.hover.sticky": false,
    "editor.hover.delay": 750,
    "editor.occurrencesHighlight": "off",
    "editor.selectionHighlight": false,
    "editor.matchBrackets": "never",

    /* Terminal */
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.tabs.defaultIcon": "terminal-bash",
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.cursorBlinking": true,

    /* Git */
    "git.defaultBranchName": "master",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.postCommitCommand": "none",
    "git.ignoreRebaseWarning": true,

    /* Codeium */
    "codeium.enableCommandSideHintEducation": false,
    "codeium.enableExplainProblem": false,
    "codeium.enableInComments": false,
    "codeium.enableCodeLens": false,
    "codeium.enableConfig": {
        "*": false
    },

    /* GitHub Copilot */
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.editor.enableCodeActions": false,

    /* Prettier */
    "prettier.requireConfig": false,
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,

    /* Auto Save */
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1,

    /* Misc */
    "output.smartScroll.enabled": false,

    // "files.associations": {
    //     "*.css": "tailwindcss",
    //     "*.scss": "tailwindcss"
    // },
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.startupEditor": "none",
    "diffEditor.ignoreTrimWhitespace": false,
    "telemetry.telemetryLevel": "off",

    /* Live Server */
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,

    /* Customize Word Highlighting */
    "workbench.colorCustomizations": {
        /* Similar Selection */
        // "editor.selectionHighlightBackground": "#0000",
        // "editor.selectionHighlightBorder": "#0000",
        /* Syntax Variable Assignment */
        // "editor.wordHighlightStrongBackground": "#0000",
        // "editor.wordHighlightStrongBorder": "#0000",
        /* Syntax Variable */
        // "editor.wordHighlightBackground": "#0000",
        // "editor.wordHighlightBorder": "#0000",
        /* Brackets */
        // "editorBracketMatch.border": "#0000",
        // "editorBracketMatch.background": "#0000"
    },

    /* Code Spell Checker */
    "cSpell.enableFiletypes": ["!json", "!jsonc", "!markdown"],
    "cSpell.userWords": [
        "Bellefair",
        "gaierror",
        "Grotesk",
        "headlessui",
        "heroicons",
        "hwsrc",
        "netscan",
        "Nmap",
        "OPENWEATHERMAP",
        "osclass",
        "osfamily",
        "osgen",
        "osmatch",
        "pdst",
        "sendrecv",
        "swiper",
        "tablefmt",
        "tailwindcss",
        "termcolor"
    ],

    /* Code Runner */
    "code-runner.enableAppInsights": false,
    "code-runner.executorMap": {
        "javascript": "node",
        "typescript": "ts-node",
        "python": "python -u",
        "lua": "lua53",
        "go": "go run",
        "sass": "sass --style expanded",
        "scss": "scss --style expanded",
        "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
        "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
        "zig": "zig run",
        "nim": "nim compile --verbosity:0 --hints:off --run",
        "shellscript": "bash",
        "powershell": "powershell -ExecutionPolicy ByPass -File",
        "ahk": "autohotkey",
        "bat": "cmd /c",
        "java": "cd $dir && javac $fileName && java $fileNameWithoutExt"
    },

    /* Go */
    "[go]": {
        "editor.tabSize": 4
    },
    "go.toolsManagement.autoUpdate": true,
    "go.formatTool": "gofumpt",

    /* JavaScript */
    "[javascript]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",

    /* TypeScript */
    "[typescript]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",

    /* JavaScript React */
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* TypeScript React */
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* JSON */
    "[json]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* JSONC (JSON with Comments) */
    "[jsonc]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* HTML */
    "[html]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // "html.hover.documentation": false,
    // "html.hover.references": false,

    /* CSS */
    "[css]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "tailwindCSS.emmetCompletions": true,
    "tailwind-fold.foldStyle": "QUOTES",
    "tailwind-fold.unfoldIfLineSelected": true,
    // "css.hover.documentation": false,
    // "css.hover.references": false,

    /* SCSS */
    "[scss]": {
        "editor.tabSize": 4,
        "prettier.tabWidth": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* Python */
    "[python]": {
        "editor.tabSize": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "python.defaultInterpreterPath": "C:\\Users\\Nine\\scoop\\apps\\python\\current",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.completeFunctionParens": true,

    /* Lua Settings */
    "[lua]": {
        "editor.tabSize": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "yinfei.luahelper"
    },
    "luahelper.format.keep_simple_control_block_one_line": true,

    /* LOVE 2D */
    "pixelbyte.love2d.path": "C:\\Program Files\\LOVE\\love.exe",
    "luahelper.format.column_limit": 140,
    // "pixelbyte.love2d.revealStatus": true,

    /* Markdown */
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.wordWrap": "on"
    }
}
